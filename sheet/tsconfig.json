{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",
    "outDir": "./lib/",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "inlineSourceMap": false,
    "incremental": false,
  },
  "include": [
    "./**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}